<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Gopher.NET"
             x:Class="Gopher.NET.App"
			 Name="Gopher.NET">
	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="About Gopher.NET" />
        </NativeMenu>
    </NativeMenu.Menu>

	<Application.Styles>
		<FluentTheme />
	</Application.Styles>
	
	<Application.Resources>
		<Color x:Key="GopherColorDark">#8b4513</Color>
		<Color x:Key="GopherColorMedium">#8B6C22</Color>
		<Color x:Key="GopherColorLight">#fbd593</Color>
		<SolidColorBrush x:Key='ButtonBrush' Color="#fff"/>
		<SolidColorBrush x:Key='ButtonDisabledBrush'>#888</SolidColorBrush>
		<SolidColorBrush x:Key='ButtonHoverBrush' Color="{DynamicResource GopherColorLight}"/>
	</Application.Resources>
</Application>
